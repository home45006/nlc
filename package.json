{
  "name": "nlc-demo",
  "version": "0.1.0",
  "description": "智能座舱自然语言控制系统 - 极简 DEMO",
  "type": "module",
  "scripts": {
    "start": "tsx src/main.ts",
    "dev": "tsx watch src/main.ts",
    "web": "tsx src/web/server.ts",
    "web:dev": "tsx watch src/web/server.ts",
    "web:build": "cd web && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:smoke": "tsx test/smoke-test.ts",
    "test:e2e": "tsx test/e2e-test.ts",
    "rewrite": "tsx src/cli/rewrite-cli.ts"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/static": "^9.0.0",
    "@fastify/websocket": "^11.2.0",
    "dotenv": "^16.4.7",
    "fastify": "^5.7.4",
    "pino-pretty": "^13.1.3"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^1.6.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^1.6.0"
  }
}
